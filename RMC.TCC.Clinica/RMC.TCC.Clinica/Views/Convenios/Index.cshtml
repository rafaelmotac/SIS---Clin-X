@model IEnumerable<RMC.TCC.Clinica.Models.Convenio>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.numConvenio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nomeConvenio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.numConvenio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nomeConvenio)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idConvenio }) |
            @Html.ActionLink("Details", "Details", new { id=item.idConvenio }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idConvenio })
        </td>
    </tr>
}

</table>
